<div class="col-md-6">
    <div class="booking-card">
      <div class="booking-box-tab">
        <div class="booking-box-status">
          <%= link_to 'Review', edit_book_booking_path(booking.book_id, booking) %>
        </div>
      </div>
      <div class="booking-box">

        <div class="book-picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path booking.book.picture%>')">
        </div>

        <div class="book-title-category">
            <div class="book-title">
                <p><%= booking.book.title %></p>
            </div>
            <div class="book-category">
               <p><%= booking.book.category %></p>
            </div>
            <div class="booking-value">
              <p><%=booking.price%>â‚¬</p>
            </div>
             <div class="booking-paid">
              <% if booking.paid == true%>
                 <p id="Paid" ><%= "Paid "%><i class="fas fa-check"></i>

</p>
              <% else %>
                 <p id="NotPaid"><%= "Not Paid " %><i class="fas fa-times"></i>

</p>
              <% end %>
            </div>
        </div>

        <div class="booking-details">
          <div class="booking-dates">
            <div class="booking-date-begin">
              <p>Rental Begins</p>
              <p class='booking-date'><%= booking.date_begin %></p>
            </div>
            <div class="booking-date-end">
              <p>Rental Ends</p>
              <p class='booking-date'><%= booking.date_end%></p>
            </div>
            <div class="booking-review">

            </div>
          </div>
        </div>
          <div class="booking-book-address-map">
              <!-- <div class="booking-book-address">
                <%= booking.book.address %>
              </div> -->
              <div class="booking-book-address-map">
                <%= link_to image_tag("http://res.cloudinary.com/pmarzagao/image/upload/c_scale,w_38/v1527784831/678111-map-marker-512.png"), edit_book_booking_path(booking.book_id, booking) %>
              </div>
          </div>
        <div class="review-button">

        </div>
      </div>
      <div class="book-details-box">
        <div class="book-summary">
          <%= booking.book.summary %>
        </div>
        <div class="book-user">
          <p>Owner</p>
          <p><%= cl_image_tag booking.book.user.picture, height: 60 ,class: "avatar" %></p>
          <p><%= booking.book.user.name %></p>
        </div>
      </div>
    </div>
</div>
