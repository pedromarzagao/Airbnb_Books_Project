<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="book-logo">
        <%= image_tag "logo.png", height:100 %>
      </div>
      <div class="form-box">
            <h1><%=@book.title%> Review</h1>

                <%= simple_form_for [@book, @booking] do |f| %>
                  <%= render partial: 'shared/form_errors', locals: { model: @booking } %>
                  <%= f.input :review %>
                  <%= f.input :rating %>
                  <%#= f.input :photo %>
                 <%#= f.input :photo_cache, as: :hidden %>
                  <%= f.submit "Review", class: "btn btn-primary" %>
                <% end %>

            <div class="extra-links">
              <%#= render "devise/shared/links"%>
            </div>
      </div>
    </div>
  </div>
</div>
