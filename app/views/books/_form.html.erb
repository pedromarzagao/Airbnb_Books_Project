<%= simple_form_for(@book) do |f| %>
  <%= render partial: 'shared/form_errors', locals: { model: @book } %>
  <%= f.input :title %>
  <%= f.input :category %>
  <%= f.input :summary %>
  <%= f.input :picture %>
  <%= f.input :picture_cache, as: :hidden %>
  <%= f.submit "Add a book", class: "btn btn-primary" %>
<% end %>


