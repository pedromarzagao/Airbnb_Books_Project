  <div class="containe-flow">
    <div class="row">
      <div class="book-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('')">
      </div>
    </div>
  </div>
