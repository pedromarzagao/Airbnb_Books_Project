                    <div class="book-details-title">
                      <h1><%= @book.title %></h1>
                    </div>
                    <div class="book-details-category">
                      <h3>Fiction</h3>
                    </div>
                    <div class="book-details-rating">

                    </div>
                </div>
                <div class="book-details-bottom-section">
                  <div class="book-details-summary">
                    <p><%= @book.summary %></p>
                  </div>
                </div>
              </div>
              <div class="book-owner">
                <div class="owner-avatar-box">
                  <%= image_tag "logo.png", height: 50, class:"owner-avatar" %>
                  <div class="owner-name">
                      <p>Jer√¥me's book</p>
                  </div>
