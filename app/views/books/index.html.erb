<h1 class="text-center"> All of our <%=@books.length %> super amazing books </h1>

<div class="content">
  <div class="cards-container">
   <div class="row">
    <% @books.each do |book| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
          <div class="card-category">Popular</div>
          <div class="card-description">
          <h2 ><%= book.title %></h2>
          </div>
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/andreiadomz">
          <%= link_to 'Show book', book, class: "card-link" %>
        </div>
      </div>
    <% end  %>
  </div>

</div>
  <div id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>">
  </div>

