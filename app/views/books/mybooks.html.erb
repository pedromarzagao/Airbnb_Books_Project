<div class="content">
  <div class="cards-container container">
    <div class="row">
      <div class="title-container">

        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="index-title">
            <p>All of the <%=@books.length %> super books you are sharing with the community</p>
          </div>
        </div>
      </div>
  </div>
   <div class="row">
      <% @books.each do |book| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card">

            <div class="card-top">
              <div class="card-category">
                <%=book.category%>
              </div>
            </div>
            <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.0), rgba(0,0,0,0.0)), url('<%= cl_image_path book.picture %> ');"">

              <%= link_to '', book, class: "card-link" %>
              <div class="card-price">
                <%= book.price %>â‚¬<br>
                <small>/day</small>
              </div>
            </div>
            <div class="card-footer">
              <h5><%= book.title %></h5>
            </div>
            <%= cl_image_tag book.user.picture, class: "card-avatar", height: 60, width: 60, crop: :fill%>
          </div>
        </div>
      <% end  %>
  </div>

</div>

